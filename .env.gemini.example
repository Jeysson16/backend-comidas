# Configuración de ejemplo para Google Gemini
# Copia este archivo como .env y configura tus valores

# ===== CONFIGURACIÓN DE GEMINI =====
# Obtén tu API key desde: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=tu_api_key_aqui

# Umbral de confianza para detecciones (0.0 - 1.0)
GEMINI_CONFIDENCE_THRESHOLD=0.7

# Backend de IA a usar (gemini, clarifai, roboflow, local, simulation)
AI_BACKEND=gemini

# ===== CONFIGURACIÓN ALTERNATIVA - CLARIFAI =====
# Si prefieres usar Clarifai en lugar de Gemini
# CLARIFAI_PAT=tu_personal_access_token_aqui
# CLARIFAI_CONFIDENCE_THRESHOLD=0.7
# AI_BACKEND=clarifai

# ===== CONFIGURACIÓN ALTERNATIVA - ROBOFLOW =====
# Si prefieres usar Roboflow en lugar de Gemini
# ROBOFLOW_API_KEY=tu_api_key_aqui
# ROBOFLOW_PROJECT_ID=tu_project_id
# ROBOFLOW_MODEL_VERSION=1
# ROBOFLOW_CONFIDENCE_THRESHOLD=0.7
# AI_BACKEND=roboflow

# ===== CONFIGURACIÓN DE BASE DE DATOS =====
DATABASE_URL=postgresql://usuario:password@localhost/comidas_db

# ===== CONFIGURACIÓN DE SEGURIDAD =====
SECRET_KEY=tu_clave_secreta_super_segura_aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CONFIGURACIÓN DE DESARROLLO =====
DEBUG=True
ENVIRONMENT=development

# ===== CONFIGURACIÓN DE ARCHIVOS =====
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB en bytes

# ===== CONFIGURACIÓN DE REDIS (OPCIONAL) =====
REDIS_URL=redis://localhost:6379/0

# ===== CONFIGURACIÓN DE CORS =====
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]